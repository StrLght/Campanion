<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.strlght.campanion.app.activity.GalleryActivity">

    <GridView
        android:id="@+id/pictures_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:choiceMode="multipleChoice"
        android:columnWidth="@dimen/grid_size"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />


    <RelativeLayout
        android:id="@+id/switch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/gallery_button_padding"
        android:paddingEnd="@dimen/gallery_button_padding"
        android:paddingStart="@dimen/gallery_button_padding">

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentStart="true"
            android:background="@drawable/selector_button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_camera" />

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_new" />

    </RelativeLayout>

</RelativeLayout>
