    android:layout_height="fill_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/grid_size"
        android:layout_height="@dimen/grid_size"
        android:layout_gravity="center"
        android:scaleType="centerInside" />

</FrameLayout>